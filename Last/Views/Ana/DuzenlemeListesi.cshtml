@model IEnumerable<Last.Models.Entity.tblUrunSet>
@{
    ViewBag.Title = "DuzenlemeListesi";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    string path = "/resim/Urun/";
}

<h2>DuzenlemeListesi</h2>


<p>
    @Html.ActionLink("Ekle", "Ekle")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.kod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.aciklama)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.miktar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resim)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        string bocuk = path + item.resim;

        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.kod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.miktar)
            </td>
            <td>
                <img src="@bocuk" height="60" width="60" />
            </td>
            <td>
                @Html.ActionLink("Sil", "Sil", new { gelenid = item.id })
            </td>
        </tr>
    }

</table>
